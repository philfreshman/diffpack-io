---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import ThemeIcon from "../components/Header/ThemeIcon.astro";

const tiles = [
	{
		title: "npm",
		subtitle: "JavaScript & TypeScript packages",
		href: "/npm",
		glow: "from-red-500/20 via-pink-500/20 to-orange-500/20 dark:from-red-500/40 dark:via-pink-500/40 dark:to-orange-500/40",
		border: "border-red-200 dark:border-red-500/40",
	},
	{
		title: "crates.io",
		subtitle: "Rust ecosystem packages",
		href: "/crates",
		glow: "from-orange-400/20 via-amber-400/20 to-yellow-300/20 dark:from-orange-400/40 dark:via-amber-400/40 dark:to-yellow-300/40",
		border: "border-orange-200 dark:border-orange-400/40",
	},
];
---

<!doctype html>
<html lang="en" data-theme>
	<head>
		<meta charset="utf-8">
		<title>Diff.io</title>
		<script src="../utils/theme.ts"></script>
		<ClientRouter/>
	</head>

	<body
		class="min-h-screen bg-white text-neutral-900 transition-colors duration-300 dark:bg-neutral-950 dark:text-neutral-100"
	>
		<ThemeIcon/>

		<main class="flex min-h-screen flex-col items-center justify-center px-6">
			<div class="mb-16 text-center">
				<h1
					class="text-4xl font-bold tracking-tight sm:text-5xl font-miriam-libre"
				>
					Diff.io
				</h1>
				<p class="mt-4 text-neutral-600 dark:text-neutral-400 max-w-md">
					Compare package versions across ecosystems. Clean. Fast. Source-aware.
				</p>
			</div>

			<div class="grid w-full max-w-4xl grid-cols-1 gap-8 sm:grid-cols-2">
				{tiles.map((tile) => (
				<a
					href={tile.href}
					class="group relative rounded-2xl p-[1px] transition-transform duration-300 hover:scale-[1.02]"
				>
					<div
						class={`absolute -inset-1 rounded-2xl bg-gradient-to-r ${tile.glow} blur-xl opacity-0 transition-opacity duration-300 group-hover:opacity-100`}
					/>

					<div
						class={`relative h-full rounded-2xl border ${tile.border} bg-white/80 dark:bg-neutral-900/80 p-8 backdrop-blur shadow-sm dark:shadow-none`}
					>
						<h2 class="text-2xl font-semibold tracking-tight">
							{tile.title}
						</h2>
						<p class="mt-2 text-sm text-neutral-600 dark:text-neutral-400">
							{tile.subtitle}
						</p>

						<div class="mt-6 inline-flex items-center gap-2 text-sm font-medium text-neutral-700 dark:text-neutral-200">
							Explore
							<svg
								class="h-4 w-4 transition-transform duration-300 group-hover:translate-x-1"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M9 5l7 7-7 7"
								/>
							</svg>
						</div>
					</div>
				</a>
			))}
			</div>

			<p class="mt-16 text-xs text-neutral-400 dark:text-neutral-500">
				More registries coming soon.
			</p>
		</main>
	</body>
</html>
